{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext","dom"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["test/*"]
    }
  },
  "include": [
    "src/**/*.ts", "src/**/*.d.ts", 
     "test/**/*.ts", "test/**/*.d.ts"
  ],
  "files": ["global.d.ts"]
}